<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hospital.hospitalserver.mapper.HospitalUserMapper">
    <!-- 这里写接口文件里对应的SQL映射-->
    <!-- 用户登录验证 -->
    <select id="validateUser" parameterType="com.hospital.hospitalserver.domain.entity.HospitalUser" resultType="com.hospital.hospitalserver.domain.entity.HospitalUser">
        select user_id AS userId,
               username
        from hospital.h_user_tb where username = #{username} and password = #{password}
    </select>
</mapper>